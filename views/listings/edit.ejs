<% layout("/layouts/boilerplate") %>

<div class="container my-5">
  <div class="row justify-content-center">
    <div class="col-lg-8 col-md-10">

      <div class="card shadow-sm p-4 p-md-5">
        <h1 class="text-center mb-4 fw-bold">Edit Your Listing</h1>

        <form
          action="/listings/<%= listing._id %>?_method=PUT"
          method="POST"
          enctype="multipart/form-data"
          class="needs-validation"
          novalidate
        >
          <!-- Title -->
          <div class="mb-3">
            <label for="title" class="form-label fw-semibold">Title</label>
            <input
              id="title"
              name="listing[title]"
              type="text"
              value="<%= listing.title %>"
              class="form-control"
              placeholder="e.g., Peaceful Mountain Retreat"
              required
            />
            <div class="valid-feedback">Looks good!</div>
            <div class="invalid-feedback">Please enter a title.</div>
          </div>

          <!-- Description -->
          <div class="mb-3">
            <label for="description" class="form-label fw-semibold">Description</label>
            <textarea
              id="description"
              name="listing[description]"
              rows="4"
              class="form-control"
              placeholder="Describe what makes your place unique and special."
              required
            ><%= listing.description %></textarea>
            <div class="invalid-feedback">Please enter a description.</div>
          </div>

          <!-- Current Image -->
          <div class="mb-3">
            <label class="form-label fw-semibold">Current Image</label>
            <div class="text-center">
              <img 
                src="<%= originalImageUrl %>" 
                alt="Current Listing Image" 
                class="img-fluid rounded shadow-sm mt-2"
                style="max-height: 250px; width:fit-content;"
              />
            </div>
          </div>

          <!-- Upload New Image -->
          <div class="mb-3">
            <label for="image" class="form-label fw-semibold">Upload New Image</label>
            <input
              id="image"
              name="listing[image]"
              type="file"
              accept="image/*"
              class="form-control"
            />
          </div>

          <div class="row">
            <!-- Price -->
            <div class="mb-3 col-md-6">
              <label for="price" class="form-label fw-semibold">Price (₹/Night)</label>
              <div class="input-group">
                <span class="input-group-text">₹</span>
                <input
                  id="price"
                  name="listing[price]"
                  type="number"
                  value="<%= listing.price %>"
                  class="form-control"
                  placeholder="e.g., 1500"
                  min="0"
                  required
                />
              </div>
              <div class="invalid-feedback">Please enter a valid price.</div>
            </div>

            <!-- Country -->
            <div class="mb-3 col-md-6">
              <label for="country" class="form-label fw-semibold">Country</label>
              <input
                id="country"
                name="listing[country]"
                type="text"
                value="<%= listing.country %>"
                class="form-control"
                placeholder="e.g., India"
                required
              />
              <div class="invalid-feedback">Please enter a valid country.</div>
            </div>
          </div>

          <!-- Location -->
          <div class="mb-3">
            <label for="location" class="form-label fw-semibold">Location</label>
            <input
              id="location"
              name="listing[location]"
              type="text"
              value="<%= listing.location %>"
              class="form-control"
              placeholder="e.g., Manali, Himachal Pradesh"
              required
            />
            <div class="invalid-feedback">Please enter a valid location.</div>
          </div>

          <!-- Action Buttons -->
          <div class="mt-4 d-grid gap-2 d-md-flex justify-content-md-end">
            <button type="submit" class="btn btn-primary ">
              <i class="fa-solid fa-floppy-disk me-2"></i>Save Changes
            </button>
            <a href="/listings/<%= listing._id %>" class="btn btn-outline-secondary ">
              <i class="fa-solid fa-xmark me-2"></i>Cancel
            </a>
          </div>

        </form>
      </div>
    </div>
  </div>
</div>
