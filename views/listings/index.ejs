<% layout("/layouts/boilerplate") %>
<body>
<h2
  class="py-3 text-center fw-bold"
  style="transition: transform 0.3s ease, color 0.3s ease, text-shadow 0.3s ease;"
  onmouseover="this.style.transform='scale(1.05)'; this.style.color='#0d6efd' ;"
  onmouseout="this.style.transform='scale(1)'; this.style.color=''; this.style.textShadow='';"
>
  Top Tourist Spots
</h2>


  <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 g-4">
    <% for(let listing of allListing){ %>
    <a href="/listings/<%= listing.id%>" class="listing-link">
      <div class="card col listing-card">
        <img
          src="<%= listing.image.url %>"
          class="card-img-top"
          alt="listing_image"
        />
        <div class="card-img-overlay">
          <p><%= listing.country %></p>
        </div>
        <div class="card-body">
          <p class="card-text">
            <b><%= listing.title %></b><br />
            &#8377; <%= listing.price.toLocaleString("en-IN") %> /Night
          </p>
        </div>
      </div>
    </a>
    <% } %>
  </div>
</body>

