<% if (success && success.length) { %>
<div
  class="alert alert-success alert-dismissible fade show custom-alert"
  role="alert"
>
  <div class="d-flex align-items-center">
    <i class="fa-solid fa-circle-check fa-lg me-3"></i>
    <div><%= success.join('<br>') %></div>
  </div>
  <button
    type="button"
    class="btn-close"
    data-bs-dismiss="alert"
    aria-label="Close"
  ></button>
</div>
<% } %> 
<% if (error && error.length) { %>
<div
  class="alert alert-danger alert-dismissible fade show custom-alert"
  role="alert"
>
  <div class="d-flex align-items-center">
    <i class="fa-solid fa-triangle-exclamation fa-lg me-3"></i>
    <div><%= error.join('<br>') %></div>
  </div>
  <button
    type="button"
    class="btn-close"
    data-bs-dismiss="alert"
    aria-label="Close"
  ></button>
</div>
<% } %>