<% layout("/layouts/boilerplate") %>

<div class="d-flex justify-content-center align-items-center min-vh-100 bg-light">
  <div class="card shadow-lg rounded-4 border-0" style="max-width: 420px; width: 90%;">
    <div class="card-body p-4 p-md-5">

      <div class="text-center mb-4">
        <i class="fa-solid fa-user-plus fa-3x text-primary"></i>
        <h2 class="mt-3 fw-bold">Create Your Account</h2>
        <p class="text-muted small">Join TravelTales to start your adventure.</p>
      </div>

      <form action="/signup" method="POST" class="needs-validation" novalidate>
        <!-- Username -->
        <div class="mb-3">
          <label for="username" class="form-label fw-medium">Username</label>
          <div class="input-group">
            <span class="input-group-text bg-white border-end-0">
              <i class="fa-solid fa-user text-secondary"></i>
            </span>
            <input
              name="username"
              id="username"
              placeholder="Choose a unique username"
              class="form-control border-start-0"
              type="text"
              required
            />
          </div>
        </div>

        <!-- Email -->
        <div class="mb-3">
          <label for="email" class="form-label fw-medium">Email</label>
          <div class="input-group">
            <span class="input-group-text bg-white border-end-0">
              <i class="fa-solid fa-envelope text-secondary"></i>
            </span>
            <input
              name="email"
              id="email"
              placeholder="e.g., your.email@example.com"
              class="form-control border-start-0"
              type="email"
              required
            />
          </div>
        </div>

        <!-- Password -->
        <div class="mb-3">
          <label for="password" class="form-label fw-medium">Password</label>
          <div class="input-group">
            <span class="input-group-text bg-white border-end-0">
              <i class="fa-solid fa-lock text-secondary"></i>
            </span>
            <input
              name="password"
              id="password"
              placeholder="Create a strong password"
              class="form-control border-start-0"
              type="password"
              required
            />
          </div>
        </div>

        <!-- Submit Button -->
        <div class="d-grid mt-4">
          <button class="btn btn-primary btn-lg rounded-pill" type="submit">
            <i class="fa-solid fa-user-plus me-2"></i> Sign Up
          </button>
        </div>
      </form>

      <div class="text-center mt-4">
        <p class="text-muted small mb-0">
          Already have an account? <a href="/login" class="text-decoration-none">Log In</a>
        </p>
      </div>

    </div>
  </div>
</div>
